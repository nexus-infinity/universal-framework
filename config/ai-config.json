{
  "model": "gpt-4",
  "maxTokens": 2048,
  "temperature": 0.7,
  "codeReview": {
    "enabled": true,
    "maxFilesToReview": 10
  },
  "testGeneration": {
    "enabled": true,
    "coverageThreshold": 80
  },
  "documentation": {
    "enabled": true,
    "outputFormat": "markdown"
  },
  "optimization": {
    "enabled": true,
    "targetMetrics": ["performance", "accessibility", "bestPractices"]
  },
  "security": {
    "enabled": true,
    "scanFrequency": "daily"
  }
}