{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,  // Keep if using JS, otherwise remove
    "skipLibCheck": true,
    "strict": true,  // Enable strict mode for better type safety
    "noImplicitAny": true,  // Optional, but good for catching untyped variables
    "strictNullChecks": true,  // Optional, for better null type safety
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
