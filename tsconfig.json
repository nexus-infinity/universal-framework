{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./platforms/web/react-app/**/*.ts",
    "./platforms/web/react-app/**/*.tsx",
    "./modules/**/*.ts",
    "./modules/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
